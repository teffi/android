<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name ="actionBarStyle">@style/MiwokAppBarStyle</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <!-- Removes action bar dropshadow. IMPT: Must be partnered with elevation=0 in actionBarStyle - Android 5.0 Change-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- App bar style -->
    <style name="MiwokAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!--Remove the sahdow below the app bar
        IMPT: Must also set android:windowContentOverlay on App theme.
        https://stackoverflow.com/a/12246593/1045672
        -->
        <item name="elevation">0dp</item>
    </style>


    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>

    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A8A19E</item>
        <item name="textAllCaps">true</item>
    </style>

